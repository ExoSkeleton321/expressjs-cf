extends ../layout.jade
block contenido
	div(class="col-md-5 center-block no-float top-space text-left")
		h1 Seguro que quiere eliminar #[b #{product.title}]?
		form(method="post" action="/productos/eliminar/#{product.id}" style="margin-top: 1.5em")
			div(class="form-group")
				label Contraseña
				input(type="password" name="password" placeholder="Contraseña" class="form-control")
				input(type="submit" class="btn btn-info pull-right" style="margin-top: 20px;")